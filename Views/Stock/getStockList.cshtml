@model PagedList.IPagedList<coreAden.Models.Malzemeler>
@using PagedList.Mvc;
@{
    ViewBag.Title = "getStockList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/myCSS.css" rel="stylesheet" />

</head>


<!-- Filtre ve İndirme -->
<form method="get" class="mb-2">
    <div class="row g-2">
        <div class="col">
            <input type="date" name="baslangic" class="form-control" value="@Request["baslangic"]" />
        </div>
        <div class="col">
            <input type="date" name="bitis" class="form-control" value="@Request["bitis"]" />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">Filtrele</button>
            <a class="btn btn-success" href="@Url.Action("ExportStockCsv", new { baslangic = Request["baslangic"], bitis = Request["bitis"] })">CSV İndir</a>
        </div>
    </div>
</form>

<!-- Malzeme Ekle Butonu -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#malzemeEkleModal">
    Yeni Malzeme Ekle
</button>

<!-- Modal -->
<div class="modal fade" id="malzemeEkleModal" tabindex="-1" aria-labelledby="malzemeEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@Url.Action("AddMaterial", "Stock")" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="malzemeEkleModalLabel">Yeni Malzeme Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="malzemeAd" class="form-label">Malzeme Adı</label>
                        <input type="text" class="form-control" id="malzemeAd" name="ad" required />
                    </div>
                    <div class="mb-3">
                        <label for="fiyat" class="form-label">Alış Fiyatı</label>
                        <input type="number" step="0.01" class="form-control" id="fiyat" name="fiyat" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>






<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>MİKTAR</th>
            <th>ALIŞ FİYATI</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            
            <tr>
                <td>@x.MalzemeID</td>
                <td>@x.MalzemeAdı</td>
                <td id="stok">@x.StokMiktari</td>
                <td>@x.AlısFiyati ₺</td>
                <td>
                    <button type="button" class="btn btn-info btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#guncelleModal-@x.MalzemeID">
                        Güncelle
                    </button>

                    <!-- Modal Güncelleme -->
                    <div class="modal fade" id="guncelleModal-@x.MalzemeID" tabindex="-1" aria-labelledby="modalLabel@x.MalzemeID" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/Stock/Guncelle" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="modalLabel@x.MalzemeID">Stok Güncelle</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="MalzemeID" value="@x.MalzemeID" />
                                        <div class="mb-3">
                                            <label>Malzeme Adı</label>
                                            <input type="text" class="form-control" name="MalzemeAdı" value="@x.MalzemeAdı" />
                                        </div>

                                        <div class="mb-3">
                                            <label>Alış Fiyatı</label>
                                            <input type="number" step="0.01" class="form-control" name="AlısFiyati" value="@x.AlısFiyati" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>

                <td>
                    <button type="button" class="btn btn-primary btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#ekleModal-@x.MalzemeID">
                        Miktar Ekle
                    </button>

                    <!-- Modal Stok Ekle-->
                    <div class="modal fade" id="ekleModal-@x.MalzemeID" tabindex="-1" aria-labelledby="ekleLabel@x.MalzemeID" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/Stock/StokEkle" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="ekleLabel@x.MalzemeID">Stok Miktar Ekle</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!-- Malzeme ID (hidden) -->
                                        <input type="hidden" name="MalzemeID" value="@x.MalzemeID" />

                                        <!-- Miktar -->
                                        <div class="mb-3">
                                            <label for="miktar-@x.MalzemeID" class="form-label">Eklenecek Miktar</label>
                                            <input type="number" name="miktar" class="form-control" id="miktar-@x.MalzemeID" required />
                                        </div>

                                        <!-- Kasaya Yansıtılsın Mı -->
                                        <div class="form-check mb-3">
                                            <input class="form-check-input kasaYansitCheck" type="checkbox" name="kasayaYansitilsinMi" value="true" id="kasaYansit-@x.MalzemeID" data-odeme="odemeDiv-@x.MalzemeID" data-kasa="kasaDiv-@x.MalzemeID" />
                                            <label class="form-check-label" for="kasaYansit-@x.MalzemeID">
                                                Kasaya Yansıtılsın Mı?
                                            </label>
                                        </div>

                                        <!-- Kasa Seçimi -->
                                        <div class="mb-3 kasaDiv" id="kasaDiv-@x.MalzemeID" style="display:none;">
                                            <label for="KasaID-@x.MalzemeID" class="form-label">Kasa Seç</label>
                                            <select class="form-select" name="KasaID" id="KasaID-@x.MalzemeID">
                                                <option value="">Lütfen Seçiniz</option>
                                                @if (ViewBag.Kasalar != null)
                                                {
                                                    foreach (var kasa in ViewBag.Kasalar)
                                                    {
                                                        <option value="@kasa.KasaID">@kasa.KasaTipAdı (@(kasa.Tutar.ToString("C")))</option>
                                                    }
                                                }
                                            </select>
                                        </div>

                                        <!-- Ödeme Türü -->
                                        <div class="mb-3 odemeDiv" id="odemeDiv-@x.MalzemeID" style="display:none;">
                                            <label for="OdemeTypeID-@x.MalzemeID" class="form-label">Ödeme Türü</label>
                                            <select class="form-select" name="OdemeTypeID" id="OdemeTypeID-@x.MalzemeID">
                                                <option value="">Lütfen Seçiniz</option>
                                                @foreach (var odeme in ViewBag.OdemeTurler)
                                                {
                                                    <option value="@odeme.Value">@odeme.Text</option>
                                                }
                                            </select>
                                        </div>

                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>

               <td>
                   <a href="/Stock/Delete/@x.MalzemeID" onclick="alert('Sadece Stok Değeri Sıfır Olanlar Silinebilir')" class="btn btn-danger" >Sil</a>
               </td>
            </tr>

         
            
        }
    </tbody>
</table>
<div>
    
    @Html.PagedListPager(Model, page => Url.Action("getStockList", "Stock", new { page }))

</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll('.kasaYansitCheck').forEach(function(checkbox) {
            var odemeDivId = checkbox.getAttribute('data-odeme');
            var odemeDiv = document.getElementById(odemeDivId);
            var selectOdeme = odemeDiv ? odemeDiv.querySelector('select') : null;
            var kasaDivId = checkbox.getAttribute('data-kasa');
            var kasaDiv = document.getElementById(kasaDivId);
            var selectKasa = kasaDiv ? kasaDiv.querySelector('select') : null;
            toggleDivs(checkbox, odemeDiv, selectOdeme, kasaDiv, selectKasa);
            checkbox.addEventListener('change', function () {
                toggleDivs(checkbox, odemeDiv, selectOdeme, kasaDiv, selectKasa);
            });
        });
        function toggleDivs(checkbox, odemeDiv, selectOdeme, kasaDiv, selectKasa) {
            if (checkbox.checked) {
                if (odemeDiv) { odemeDiv.style.display = 'block'; if (selectOdeme) selectOdeme.setAttribute('required', 'required'); }
                if (kasaDiv) { kasaDiv.style.display = 'block'; if (selectKasa) selectKasa.setAttribute('required', 'required'); }
            } else {
                if (odemeDiv) { odemeDiv.style.display = 'none'; if (selectOdeme) { selectOdeme.removeAttribute('required'); selectOdeme.value = ''; } }
                if (kasaDiv) { kasaDiv.style.display = 'none'; if (selectKasa) { selectKasa.removeAttribute('required'); selectKasa.value = ''; } }
            }
        }
    });



 

 


</script>
